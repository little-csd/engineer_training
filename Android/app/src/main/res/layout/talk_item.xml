<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_marginVertical="5dp">

    <LinearLayout
        android:id="@+id/talk_left"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:id="@+id/talk_card_left"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="5dp"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:cardCornerRadius="5dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">
            <ImageView
                android:id="@+id/talk_icon_left"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/talk_text_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/left_msg"
            android:textSize="15sp"
            android:minWidth="60dp"
            android:minHeight="40dp"
            android:maxWidth="280dp"
            android:gravity="center_vertical"
            android:layout_marginStart="5dp"
            android:textColor="@color/colorBlack"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/talk_right"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end">

        <TextView
            android:id="@+id/talk_text_right"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:background="@drawable/right_msg"
            android:textSize="15sp"
            android:gravity="center_vertical"
            android:minHeight="40dp"
            android:minWidth="60dp"
            android:maxWidth="280dp"
            android:layout_marginEnd="5dp"
            android:textColor="@color/colorBlack"/>

        <androidx.cardview.widget.CardView
            android:id="@+id/talk_card_right"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="5dp"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="end"
            app:cardCornerRadius="5dp">
            <ImageView
                android:id="@+id/talk_icon_right"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </androidx.cardview.widget.CardView>

    </LinearLayout>

</LinearLayout>